<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.ChangePasswordPage"
             Title="Cambiar Contraseña"
             BackgroundColor="#0D0D0D">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Cambiar Contraseña" 
                   FontSize="24" 
                   HorizontalOptions="Center"
                   TextColor="White" />

            <Frame BackgroundColor="#1E1E1E" 
                   CornerRadius="10" 
                   Padding="15"
                   BorderColor="#E53935">
                <VerticalStackLayout Spacing="15">

                    <Entry x:Name="entryEmail"
                           Placeholder="Email"
                           PlaceholderColor="#999"
                           TextColor="White"
                           Keyboard="Email" />

                    <Entry x:Name="entryContrasenaActual"
                           Placeholder="Contraseña actual"
                           PlaceholderColor="#999"
                           TextColor="White"
                           IsPassword="True" />

                    <Entry x:Name="entryNuevaContrasena"
                           Placeholder="Nueva contraseña"
                           PlaceholderColor="#999"
                           TextColor="White"
                           IsPassword="True" />

                </VerticalStackLayout>
            </Frame>

            <Button Text="Actualizar Contraseña"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    Clicked="OnChangePasswordClicked" />

            <Button Text="Volver"
                    BackgroundColor="#666"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50"
                    Clicked="OnVolverClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>