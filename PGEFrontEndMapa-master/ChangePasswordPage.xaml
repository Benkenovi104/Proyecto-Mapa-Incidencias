<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.ChangePasswordPage"
             Title="Cambiar Contrasena">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="Cambiar Contrasena" 
                   FontSize="24" 
                   HorizontalOptions="Center" />

            <Entry x:Name="entryEmail"
                   Placeholder="Email"
                   Keyboard="Email" />

            <Entry x:Name="entryOldPassword"
                   Placeholder="Contrasena actual"
                   IsPassword="True" />

            <Entry x:Name="entryNewPassword"
                   Placeholder="Nueva contrasena"
                   IsPassword="True" />

            <Button Text="Actualizar Contrasena"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    Clicked="OnChangePasswordClicked" />

            <Button Text="Volver"
                    Clicked="OnVolverClicked"
                    BackgroundColor="#999"
                    TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
