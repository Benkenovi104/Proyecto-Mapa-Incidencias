<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.PerfilPage"
             Title="Mi Perfil">

    <!-- 🎨 Fondo degradado más contrastado -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0D0D0D" Offset="0.0" />
            <GradientStop Color="#1A1A1A" Offset="0.5" />
            <GradientStop Color="#000000" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <VerticalStackLayout Padding="25" Spacing="20">

            <!-- 🔹 Encabezado -->
            <Label Text="👤 Mi perfil"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White" />

            <!-- 🔹 Imagen de perfil -->
            <Frame CornerRadius="60"
                   Padding="0"
                   HeightRequest="120"
                   WidthRequest="120"
                   HorizontalOptions="Center"
                   HasShadow="True"
                   BackgroundColor="#1E1E1E"
                   BorderColor="#E53935">
                <Image Source="profile_placeholder.png"
                       Aspect="AspectFill"
                       HeightRequest="120"
                       WidthRequest="120" />
            </Frame>

            <!-- 🔹 Información del usuario -->
            <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                  ColumnDefinitions="*,auto"
                  ColumnSpacing="10"
                  Margin="0,10,0,0">

                <VerticalStackLayout Grid.Row="0" Spacing="2">
                    <Label Text="Nombre:" FontAttributes="Bold" TextColor="#E0E0E0"/>
                    <Label x:Name="lblNombre" Text="-----" TextColor="White"/>
                </VerticalStackLayout>
                <Button Grid.Row="0" Grid.Column="1"
                        Text="✏️"
                        FontSize="14"
                        BackgroundColor="Transparent"
                        TextColor="#E53935"
                        Clicked="OnEditarNombreClicked"/>

                <VerticalStackLayout Grid.Row="1" Spacing="2">
                    <Label Text="Apellido:" FontAttributes="Bold" TextColor="#E0E0E0"/>
                    <Label x:Name="lblApellido" Text="-----" TextColor="White"/>
                </VerticalStackLayout>
                <Button Grid.Row="1" Grid.Column="1"
                        Text="✏️"
                        FontSize="14"
                        BackgroundColor="Transparent"
                        TextColor="#E53935"
                        Clicked="OnEditarApellidoClicked"/>

                <VerticalStackLayout Grid.Row="2" Spacing="2">
                    <Label Text="Usuario:" FontAttributes="Bold" TextColor="#E0E0E0"/>
                    <Label x:Name="lblUsuario" Text="-----" TextColor="White"/>
                </VerticalStackLayout>
                <Button Grid.Row="2" Grid.Column="1"
                        Text="✏️"
                        FontSize="14"
                        BackgroundColor="Transparent"
                        TextColor="#E53935"
                        Clicked="OnEditarUsuarioClicked"/>

                <VerticalStackLayout Grid.Row="3" Spacing="2">
                    <Label Text="Email:" FontAttributes="Bold" TextColor="#E0E0E0"/>
                    <Label x:Name="lblEmail" Text="-----" TextColor="White"/>
                </VerticalStackLayout>
                <Button Grid.Row="3" Grid.Column="1"
                        Text="✏️"
                        FontSize="14"
                        BackgroundColor="Transparent"
                        TextColor="#E53935"
                        Clicked="OnEditarEmailClicked"/>
            </Grid>

            <!-- 🔹 Recuadro de imagen -->
            <Frame HeightRequest="130"
                   BackgroundColor="#1E1E1E"
                   CornerRadius="10"
                   BorderColor="#E53935"
                   HasShadow="False"
                   Margin="0,10,0,0">
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="upload_placeholder.png"
                           HeightRequest="50"
                           WidthRequest="50"/>
                </VerticalStackLayout>
            </Frame>

            <!-- 🔹 Botones inferiores con borde blanco -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,10,0,0">
                <Button Text="Cambiar contraseña"
                        Grid.Column="0"
                        BackgroundColor="Transparent"
                        BorderColor="White"
                        BorderWidth="1.5"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnCambiarContrasenaClicked"/>

                <Button Text="Eliminar Cuenta"
                        Grid.Column="1"
                        BackgroundColor="Transparent"
                        BorderColor="#E53935"
                        BorderWidth="1.5"
                        TextColor="#E53935"
                        CornerRadius="8"
                        Clicked="OnEliminarCuentaClicked"/>
            </Grid>

            <!-- 🔹 Volver -->
            <Button Text="⬅ Volver"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    CornerRadius="8"
                    Margin="0,15,0,20"
                    Clicked="OnVolverClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
