<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.PerfilPage"
             Title="Mi Perfil">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Encabezado -->
            <Label Text="👤 Mi Perfil"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Imagen de perfil -->
            <Frame CornerRadius="60" Padding="0" HeightRequest="120" WidthRequest="120"
                   HorizontalOptions="Center" HasShadow="True">
                <Image Source="profile_placeholder.png"
                       Aspect="AspectFill"
                       HeightRequest="120" WidthRequest="120" />
            </Frame>

            <!-- Información del usuario (hardcodeada por ahora) -->
            <Label Text="Nombre:" FontAttributes="Bold" />
            <Label Text="Conrado Pérez Mazzola" FontSize="16" />

            <Label Text="Correo:" FontAttributes="Bold" />
            <Label Text="conrado.perez@example.com" FontSize="16" />

            <Label Text="Empresa:" FontAttributes="Bold" />
            <Label Text="Tronik - Mesa de Ayuda" FontSize="16" />

            <!-- Botones -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,10,0,0">
                <Button Text="🔒 Cambiar contraseña"
                        Grid.Column="0"
                        BackgroundColor="#424242"
                        TextColor="White"
                        CornerRadius="10"
                        Clicked="OnCambiarContrasenaClicked" />

                <Button Text="🗑️ Eliminar cuenta"
                        Grid.Column="1"
                        BackgroundColor="#E53935"
                        TextColor="White"
                        CornerRadius="10"
                        Clicked="OnEliminarCuentaClicked" />
            </Grid>

            <!-- Botón volver -->
            <Button Text="⬅ Volver"
                    BackgroundColor="#757575"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,15,0,0"
                    Clicked="OnVolverClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
