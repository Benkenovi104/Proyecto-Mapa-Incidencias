<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.NuevaIncidenciaPage"
             Title="Nueva Incidencia">

    <ScrollView Padding="20">
        <VerticalStackLayout Spacing="15">
            <Label x:Name="lblCoordenadas"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="Gray" />

            <Picker x:Name="pickerCategoria"
                    Title="Seleccionar categoria"
                    FontSize="16" />

            <Entry x:Name="entryDescripcion"
                   Placeholder="Descripción de la incidencia" />

            <!-- 📸 SECCIÓN DE FOTO -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="📸 Foto de la Incidencia" 
                           FontAttributes="Bold" 
                           FontSize="16" />

                    <!-- Botón para tomar foto -->
                    <Button x:Name="btnTomarFoto"
                            Text="📷 Tomar Foto"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="10"
                            Clicked="OnTomarFotoClicked" />

                    <!-- Preview de la foto -->
                    <Image x:Name="imgPreview"
                           HeightRequest="200"
                           BackgroundColor="LightGray"
                           Aspect="AspectFill" />

                    <!-- Label para estado de la foto -->
                    <Label x:Name="lblEstadoFoto"
                           Text="No se ha tomado ninguna foto"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="📤 Enviar incidencia"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    CornerRadius="10"
                    FontAttributes="Bold"
                    Clicked="OnEnviarClicked" />

            <Button Text="❌ Cancelar"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    CornerRadius="10"
                    Clicked="OnCancelarClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>