<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="IntegrarMapa.BuscarPage" 
             Title="Buscar Incidencias" 
             BackgroundColor="#111">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- 游댌 Selector de filtro -->
            <Label Text="Filtrar por:" 
                   FontAttributes="Bold"
                   TextColor="White"
                   FontSize="18"/>

            <Picker x:Name="pickerFiltro"
                    Title="Seleccion치 un tipo de filtro"
                    TextColor="White"
                    BackgroundColor="#222"
                    SelectedIndexChanged="OnFiltroChanged">
                <Picker.Items>
                    <x:String>Categor칤a</x:String>
                    <x:String>Descripci칩n</x:String>
                    <x:String>Fecha</x:String>
                </Picker.Items>
            </Picker>

            <!-- 游댲 Contenedor din치mico para filtros -->
            <ContentView x:Name="FiltroContainer" />

            <!-- 游댖 Bot칩n de b칰squeda -->
            <Button Text="Buscar incidencias"
                    BackgroundColor="#0078FF"
                    TextColor="White"
                    Clicked="OnBuscarClicked"
                    CornerRadius="10"
                    HeightRequest="45" />

            <!-- 游빐 Resultados -->
            <Label x:Name="lblResultadosTitulo"
                   Text="Resultados encontrados:"
                   FontAttributes="Bold"
                   TextColor="White"
                   IsVisible="False"
                   FontSize="18"
                   Margin="0,10,0,0"/>

            <CollectionView x:Name="listaResultados"
                            IsVisible="False"
                            SelectionMode="None">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5"
                               BackgroundColor="#1E1E1E"
                               CornerRadius="10"
                               Padding="10"
                               BorderColor="#333">

                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding Descripcion}"
                                       FontAttributes="Bold"
                                       FontSize="16"
                                       TextColor="#00BFFF"
                                       LineBreakMode="WordWrap"/>

                                <Label Text="{Binding CategoriaId, StringFormat='Categor칤a ID: {0}'}"
                                       TextColor="White"
                                       FontSize="14"/>

                                <Label Text="{Binding Estado, StringFormat='Estado: {0}'}"
                                       TextColor="#AAAAAA"
                                       FontSize="12"/>

                                <Label Text="{Binding Fecha, StringFormat='Fecha: {0:dd/MM/yyyy HH:mm}'}"
                                       TextColor="#AAAAAA"
                                       FontSize="12"/>
                            </VerticalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- 游댗 Bot칩n volver -->
            <Button Text="Volver"
                    BackgroundColor="#444"
                    TextColor="White"
                    Clicked="OnVolverClicked"
                    CornerRadius="10"
                    HeightRequest="45"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>