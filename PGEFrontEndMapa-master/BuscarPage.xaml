<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.BuscarPage"
             Title="Buscar Incidencias">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Encabezado -->
            <Label Text="üîé Buscar Incidencias"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Tipo de filtro -->
            <Label Text="Filtrar por:" FontAttributes="Bold" />
            <Picker x:Name="pickerFiltro"
                    Title="Seleccionar filtro"
                    SelectedIndexChanged="OnFiltroChanged">
                <Picker.Items>
                    <x:String>Categor√≠a</x:String>
                    <x:String>Nombre</x:String>
                    <x:String>Fecha</x:String>
                </Picker.Items>
            </Picker>

            <!-- Contenedor din√°mico (dependiendo del filtro) -->
            <ContentView x:Name="FiltroContainer" />

            <!-- Bot√≥n de b√∫squeda -->
            <Button Text="üîç Buscar"
                    BackgroundColor="#E53935"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnBuscarClicked" />

            <!-- Resultados -->
            <Label x:Name="lblResultadosTitulo"
                   Text="Resultados:"
                   FontAttributes="Bold"
                   IsVisible="False" />

            <CollectionView x:Name="listaResultados"
                            IsVisible="False"
                            Margin="0,10,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" CornerRadius="8" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Titulo}" FontAttributes="Bold" FontSize="16" />
                                <Label Text="{Binding Coordenadas}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Bot√≥n volver -->
            <Button Text="‚¨Ö Volver"
                    BackgroundColor="#757575"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnVolverClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
