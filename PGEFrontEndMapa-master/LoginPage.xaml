<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.LoginPage"
             Title="Iniciar Sesion">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20" VerticalOptions="Center">

            <Label Text="Iniciar sesion"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- LABEL PARA MOSTRAR MENSAJE DE ÉXITO -->
            <Label x:Name="lblMensajeExito"
                   IsVisible="false"
                   TextColor="Green"
                   HorizontalOptions="Center"/>

            <!-- LABEL PARA MOSTRAR ERRORES -->
            <Label x:Name="lblMensajeError"
                   IsVisible="false"
                   TextColor="Red"
                   HorizontalOptions="Center"/>

            <!-- Usuario ahora es Mail -->
            <Entry x:Name="entryEmail"
                   Placeholder="Mail"
                   Keyboard="Email"
                   ReturnType="Next" />

            <!-- Contraseña -->
            <Entry x:Name="entryContrasena"
                   Placeholder="Contrasena"
                   IsPassword="True"
                   ReturnType="Done" />

            <!-- Botones (sin cambios de estilo) -->
            <Button Text="Iniciar sesion"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnIniciarSesionClicked" />

            <Button Text="Registrarse"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnRegistrarseClicked" />

            <Button Text="Cambiar contrasena"
                    BackgroundColor="#FFC107"
                    TextColor="Black"
                    CornerRadius="10"
                    Clicked="OnCambiarContrasenaClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

