<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.LoginPage"
             Title="Iniciar Sesion">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20" VerticalOptions="Center">

            <Label Text="Iniciar sesion"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- Usuario -->
            <Entry x:Name="entryUsuario"
                   Placeholder="Usuario"
                   Keyboard="Default"
                   ReturnType="Next" />

            <!-- Contraseña -->
            <Entry x:Name="entryContrasena"
                   Placeholder="Contraseña"
                   IsPassword="True"
                   ReturnType="Done" />

            <!-- Botones -->
            <Button Text="Iniciar sesion"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnIniciarSesionClicked" />

            <Button Text="Registrarse"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnRegistrarseClicked" />

            <Button Text="Cambiar contraseña"
                    BackgroundColor="#FFC107"
                    TextColor="Black"
                    CornerRadius="10"
                    Clicked="OnCambiarContrasenaClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
