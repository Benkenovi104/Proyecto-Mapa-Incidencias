<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntegrarMapa.RegisterPage"
             Title="Registro">

    <ScrollView>
        <VerticalStackLayout Padding="40" Spacing="20" VerticalOptions="Center">

            <Label Text="Registrarse"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- Nombre -->
            <Entry x:Name="entryNombre"
                   Placeholder="Nombre"
                   Keyboard="Default"
                   ReturnType="Next" />

            <!-- Apellido -->
            <Entry x:Name="entryApellido"
                   Placeholder="Apellido"
                   Keyboard="Default"
                   ReturnType="Next" />

            <!-- Email -->
            <Entry x:Name="entryEmail"
                   Placeholder="Correo electronico"
                   Keyboard="Email"
                   ReturnType="Next" />

            <!-- Usuario -->
            <Entry x:Name="entryUsername"
                   Placeholder="Nombre de usuario"
                   Keyboard="Default"
                   ReturnType="Next" />

            <!-- ContraseÃ±a -->
            <Entry x:Name="entryPassword"
                   Placeholder="Contrasena"
                   IsPassword="True"
                   ReturnType="Done" />

            <!-- Botones -->
            <Button Text="Crear cuenta"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnCrearCuentaClicked" />

            <Button Text="Volver al inicio de sesion"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="OnVolverClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
